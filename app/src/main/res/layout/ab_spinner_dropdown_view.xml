<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/pairTxt"
        android:layout_width="@dimen/dropdown_text_width"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dropdown_text_horizontal_padding"
        android:paddingBottom="@dimen/dropdown_text_horizontal_padding"
        android:paddingLeft="@dimen/dropdown_text_vertical_padding"
        android:paddingRight="@dimen/dropdown_text_vertical_padding" />

    <com.f2prateek.progressbutton.ProgressButton
        android:id="@+id/progressBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>